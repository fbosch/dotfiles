{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-wakatime"
  ],
  "permission": {
    "external_directory": {
      "~/tmp/**": "allow",
      "~/nixos/**": "allow",
      "~/dotfiles/**": "allow",
      "~/.config/**": "allow"
    }
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**"
    ]
  },
  "mcp": {
    "design-system": {
      "enabled": false,
      "type": "remote",
      "url": "http://localhost:6006/mcp"
    }
  }
}
