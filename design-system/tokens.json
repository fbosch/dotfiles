{
  "$schema": "https://tr.designtokens.org/format/",
  "version": "1.0.0",
  "colors": {
    "accent": {
      "primary": { "value": "#0067c0", "usage": "Primary interactive elements, links, focus states" },
      "hover": { "value": "#106ebe", "usage": "Hover state for accent elements" },
      "focus": { "value": "#1a7fd4", "usage": "Focus/active state for accent elements" }
    },
    "state": {
      "idle": { "value": "#73bc6f", "usage": "CPU idle, success states" },
      "warning": { "value": "#dea721", "usage": "CPU warning threshold, caution states" },
      "critical": { "value": "#e35245", "usage": "CPU critical threshold, error states (waybar)" },
      "error": { "value": "#ff6b6b", "usage": "Destructive actions, critical notifications (swaync)" }
    },
    "text": {
      "primary": { "value": "#ffffff", "usage": "Primary text, headings" },
      "secondary": { "value": "#cccccc", "usage": "Secondary text, descriptions" },
      "tertiary": { "value": "#999999", "usage": "Disabled, placeholder, timestamps" },
      "muted": { "value": "rgba(255, 255, 255, 0.4)", "usage": "Very subtle text, icons" }
    },
    "surface": {
      "bg": { "value": "rgba(32, 32, 32, 0.85)", "usage": "Main background (swaync)" },
      "bg-waybar": { "value": "rgba(44, 44, 44, 0.7)", "usage": "Waybar background" },
      "bg-solid": { "value": "rgb(32, 32, 32)", "usage": "Solid background for overlays" },
      "layer-1": { "value": "rgba(45, 45, 45, 0.6)", "usage": "First elevation level" },
      "layer-2": { "value": "rgba(55, 55, 55, 0.7)", "usage": "Hover state" },
      "layer-3": { "value": "rgba(65, 65, 65, 0.8)", "usage": "Active/pressed state" },
      "subtle": { "value": "rgba(255, 255, 255, 0.01)", "usage": "Very subtle hover" },
      "hover": { "value": "rgba(255, 255, 255, 0.05)", "usage": "Standard hover background" },
      "active": { "value": "rgba(255, 255, 255, 0.1)", "usage": "Active/selected background" }
    },
    "border": {
      "default": { "value": "rgba(255, 255, 255, 0.08)", "usage": "Standard borders" },
      "subtle": { "value": "rgba(255, 255, 255, 0.1)", "usage": "Dividers, subtle separators" },
      "hover": { "value": "rgba(255, 255, 255, 0.15)", "usage": "Hover state borders" }
    }
  },
  "usage": {
    "description": "Zenwritten Dark design system for Hyprland desktop environment",
    "configs": ["waybar", "swaync", "ags"],
    "theme": "Zenwritten Dark"
  }
