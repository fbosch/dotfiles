{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "wallhaven",
  "title": "Wallhaven",
  "description": "search for wallpapers",
  "categories": [],
  "license": "MIT",
  "author": "fbosch",
  "contributors": [],
  "pastContributors": [],
  "icon": "extension_icon.png",
  "commands": [
    {
      "name": "search-for-wallpapers",
      "title": "Search for Wallpapers",
      "subtitle": "Find wallpapers on wallhaven",
      "description": "Searches for wallpapers on wallhaven.cc",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": false,
      "title": "API Key",
      "description": "Optional Wallhaven API key for accessing additional features",
      "placeholder": "Enter your API key"
    },
    {
      "name": "useUserSettings",
      "type": "checkbox",
      "required": false,
      "title": "Use User Settings",
      "description": "Use your Wallhaven account settings (requires API key)",
      "default": false,
      "label": "Override extension settings with your Wallhaven preferences"
    },
    {
      "name": "purity",
      "type": "dropdown",
      "required": false,
      "title": "Content Purity",
      "description": "Filter by content rating",
      "default": "100",
      "data": [
        {
          "title": "SFW Only",
          "value": "100"
        },
        {
          "title": "SFW + Sketchy",
          "value": "110"
        }
      ]
    },
    {
      "name": "sorting",
      "type": "dropdown",
      "required": false,
      "title": "Default Sorting",
      "description": "How to sort wallpapers",
      "default": "relevance",
      "data": [
        {
          "title": "Relevance",
          "value": "relevance"
        },
        {
          "title": "Top List",
          "value": "toplist"
        },
        {
          "title": "Most Recent",
          "value": "date_added"
        },
        {
          "title": "Most Views",
          "value": "views"
        },
        {
          "title": "Most Favorites",
          "value": "favorites"
        },
        {
          "title": "Random",
          "value": "random"
        }
      ]
    },
    {
      "name": "topRange",
      "type": "dropdown",
      "required": false,
      "title": "Top Range",
      "description": "Time range for top list sorting (only applies when sorting is 'Top List')",
      "default": "1y",
      "data": [
        {
          "title": "Last Day",
          "value": "1d"
        },
        {
          "title": "Last 3 Days",
          "value": "3d"
        },
        {
          "title": "Last Week",
          "value": "1w"
        },
        {
          "title": "Last Month",
          "value": "1M"
        },
        {
          "title": "Last 3 Months",
          "value": "3M"
        },
        {
          "title": "Last 6 Months",
          "value": "6M"
        },
        {
          "title": "Last Year",
          "value": "1y"
        }
      ]
    },
    {
      "name": "downloadDirectory",
      "type": "textfield",
      "required": false,
      "title": "Download Directory",
      "description": "Directory where wallpapers will be downloaded (supports ~ for home directory)",
      "default": "~/Pictures/Wallpapers",
      "placeholder": "~/Pictures/Wallpapers"
    },
    {
      "name": "hyprpaperConfigPath",
      "type": "textfield",
      "required": false,
      "title": "Hyprpaper Config Path",
      "description": "Path to your hyprpaper.conf file (for Download and Apply action)",
      "default": "~/.config/hypr/hyprpaper.conf",
      "placeholder": "~/.config/hypr/hyprpaper.conf"
    }
  ],
  "scripts": {
    "build": "vici build",
    "dev": "vici develop"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.6",
    "@vicinae/api": "^0.15.7"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
