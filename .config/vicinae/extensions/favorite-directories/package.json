{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "favorite-directories",
  "title": "Favorite Directories",
  "description": "Quickly search and navigate to your favorite directories",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "author": "fbosch",
  "contributors": [],
  "pastContributors": [],
  "icon": "extension_icon.png",
  "commands": [
    {
      "name": "open-downloads",
      "title": "Downloads",
      "subtitle": "Open Downloads folder",
      "description": "Open /mnt/storage/Downloads in file manager",
      "mode": "no-view",
      "icon": "folder-download.png"
    },
    {
      "name": "open-pictures",
      "title": "Pictures",
      "subtitle": "Open Pictures folder",
      "description": "Open /home/fbb/Pictures in file manager",
      "mode": "no-view",
      "icon": "folder-pictures.png"
    },
    {
      "name": "open-desktop",
      "title": "Desktop",
      "subtitle": "Open Desktop folder",
      "description": "Open /home/fbb/Desktop in file manager",
      "mode": "no-view",
      "icon": "user-desktop.png"
    },
    {
      "name": "open-dotfiles",
      "title": "Dotfiles",
      "subtitle": "Open Dotfiles folder",
      "description": "Open ~/dotfiles in file manager",
      "mode": "no-view",
      "icon": "folder-git.png"
    },
    {
      "name": "open-nas-documents",
      "title": "Documents (NAS)",
      "subtitle": "Open Documents (NAS) folder",
      "description": "Open /mnt/nas/FrederikDocs in file manager",
      "mode": "no-view",
      "icon": "folder-cloud-documents.png"
    },
    {
      "name": "open-nas-downloads",
      "title": "Downloads (NAS)",
      "subtitle": "Open Downloads (NAS) folder",
      "description": "Open /mnt/nas/downloads in file manager",
      "mode": "no-view",
      "icon": "folder-cloud-download.png"
    },
    {
      "name": "open-nas-music",
      "title": "Music (NAS)",
      "subtitle": "Open Music (NAS) folder",
      "description": "Open /mnt/nas/music in file manager",
      "mode": "no-view",
      "icon": "folder-cloud-music.png"
    },
    {
      "name": "open-nas-photos",
      "title": "Photos (NAS)",
      "subtitle": "Open Photos (NAS) folder",
      "description": "Open /mnt/nas/photo in file manager",
      "mode": "no-view",
      "icon": "folder-cloud-photos.png"
    },
    {
      "name": "open-nas-videos",
      "title": "Videos (NAS)",
      "subtitle": "Open Videos (NAS) folder",
      "description": "Open /mnt/nas/video in file manager",
      "mode": "no-view",
      "icon": "folder-cloud-videos.png"
    },
    {
      "name": "open-nas-encrypted",
      "title": "Encrypted (NAS)",
      "subtitle": "Open Encrypted (NAS) folder",
      "description": "Open /mnt/nas/encrypted in file manager",
      "mode": "no-view",
      "icon": "folder-cloud-encrypted.png"
    },
    {
      "name": "open-lacie",
      "title": "LaCie",
      "subtitle": "Open LaCie folder",
      "description": "Open /mnt/nas/LaCie in file manager",
      "mode": "no-view",
      "icon": "folder-cloud-lacie.png"
    }
  ],
  "preferences": [
    {
      "name": "fileManager",
      "type": "dropdown",
      "required": false,
      "title": "File Manager",
      "description": "Choose which file manager to use for opening directories",
      "default": "auto",
      "data": [
        {
          "title": "Auto-detect",
          "value": "auto"
        },
        {
          "title": "Nemo",
          "value": "nemo"
        },
        {
          "title": "Nautilus",
          "value": "nautilus"
        },
        {
          "title": "Dolphin",
          "value": "dolphin"
        },
        {
          "title": "Thunar",
          "value": "thunar"
        },
        {
          "title": "PCManFM",
          "value": "pcmanfm"
        }
      ]
    }
  ],
  "scripts": {
    "generate": "node scripts/generate.js",
    "build": "vici build",
    "dev": "vici develop",
    "format": "biome format --write src",
    "lint": "vici lint"
  },
  "dependencies": {
    "@vicinae/api": "^0.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "typescript": "^5.9.3"
  }
}
