{
  "$schema": "https://opencode.ai/config.json",
  "theme": "zenwritten-dark",
  "instructions": ["AGENTS.md", "docs/*.md", ".cursor/rules/*.md*"],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "vitest": {
      "enabled": false,
      "type": "local",
      "command": ["bunx", "@djankies/vitest-mcp"]
    },
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": ["bunx", "@playwright/mcp@latest"]
    },
    "eslint": {
      "type": "local",
      "command": ["bunx", "@eslint/mcp@latest"]
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["bunx", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "neovim": {
      "type": "local",
      "command": ["npx", "-y", "mcp-neovim-server"],
      "environment": {
        "NVIM_SOCKET_PATH": "/tmp/nvim"
      }
    },
    "context-portal": {
      "enabled": false,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "context-portal-mcp",
        "conport-mcp",
        "--mode",
        "stdio",
        "--log-level",
        "INFO"
      ]
    }
  }
}
