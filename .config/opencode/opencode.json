{
  "$schema": "https://opencode.ai/config.json",
  "theme": "zenwritten-dark",
  "model": "github-copilot/gpt-5.2-codex",
  "small_model": "anthropic/claude-haiku-4-5",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "@happycastle/opencode-openmemory@latest",
    "opencode-wakatime"
  ],
  "instructions": [
    "~/.config/opencode/instructions/shell-strategy.md"
  ],
  "permission": {
    "bash": {
      "rm *": "deny",
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "git push *": "deny",
      "git reset *": "deny",
      "git rebase *": "deny",
      "git checkout *": "deny"
    }
  },
  "agent": {
    "build": {
      "temperature": 0.3
    },
    "plan": {
      "model": "anthropic/claude-opus-4-6",
      "reasoningEffort": "high"
    },
    "explore": {
      "model": "github-copilot/grok-code-fast-1",
      "temperature": 0
    },
    "general": {
      "model": "anthropic/claude-sonnet-4-5",
      "steps": 15,
      "temperature": 0.3
    },
    "title": {
      "model": "github-copilot/grok-code-fast-1",
      "temperature": 0
    },
    "summary": {
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.1
    },
    "compaction": {
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0
    },
    "test": {
      "model": "anthropic/claude-sonnet-4-6"
    },
    "review": {
      "model": "anthropic/claude-opus-4-6"
    },
    "docs": {
      "model": "anthropic/claude-opus-4-6"
    },
    "quick": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "benchmark": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "spec": {
      "model": "anthropic/claude-opus-4-6"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "bunx",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "github": {
      "type": "local",
      "command": [
        "gh",
        "mcp"
      ]
    },
    "vitest": {
      "enabled": false,
      "type": "local",
      "command": [
        "bunx",
        "@djankies/vitest-mcp"
      ]
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey={env:EXA_API_KEY}",
      "enabled": true
    },
    "eslint": {
      "enabled": false,
      "type": "local",
      "command": [
        "bunx",
        "@eslint/mcp@latest"
      ]
    },
    "morph-mcp": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@morphllm/morphmcp"
      ],
      "environment": {
        "MORPH_API_KEY": "{env:MORPH_API_KEY}",
        "ENABLED_TOOLS": "edit_file,warpgrep_codebase_search"
      }
    }
  }
}
