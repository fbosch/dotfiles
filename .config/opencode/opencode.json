{
  "$schema": "https://opencode.ai/config.json",
  "theme": "zenwritten-dark",
  "instructions": [
    "AGENTS.md",
    ".cursor/rules/*.md*"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "bunx",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "github": {
      "type": "local",
      "command": ["gh", "mcp"],
    },
    "vitest": {
      "enabled": false,
      "type": "local",
      "command": [
        "bunx",
        "@djankies/vitest-mcp"
      ]
    },
    "eslint": {
      "enabled": false,
      "type": "local",
      "command": [
        "bunx",
        "@eslint/mcp@latest"
      ]
    }
  }
}
