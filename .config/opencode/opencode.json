{
  "$schema": "https://opencode.ai/config.json",
  "theme": "zenwritten-dark",
  "model": "anthropic/claude-sonnet-4-6",
  "small_model": "github-copilot/claude-haiku-4.5",
  "instructions": [
    "AGENTS.md",
    ".cursor/rules/*.md*"
  ],
  "agent": {
    "build": {
      "temperature": 0.3
    },
    "plan": {
      "temperature": 0.3
    },
    "explore": {
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.0
    },
    "general": {
      "model": "github-copilot/claude-haiku-4.5",
      "steps": 15,
      "temperature": 0.3
    },
    "title": {
      "model": "github-copilot/grok-code-fast-1",
      "temperature": 0.0
    },
    "summary": {
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.1
    },
    "compaction": {
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.0
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "bunx",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "github": {
      "type": "local",
      "command": [
        "gh",
        "mcp"
      ]
    },
    "vitest": {
      "enabled": false,
      "type": "local",
      "command": [
        "bunx",
        "@djankies/vitest-mcp"
      ]
    },
    "eslint": {
      "enabled": false,
      "type": "local",
      "command": [
        "bunx",
        "@eslint/mcp@latest"
      ]
    }
  }
}
