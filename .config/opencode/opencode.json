{
  "$schema": "https://opencode.ai/config.json",
  "theme": "zenwritten-dark",
  "model": "anthropic/claude-sonnet-4-6",
  "small_model": "anthropic/claude-haiku-4-5",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "@happycastle/opencode-openmemory@latest",
    "opencode-wakatime"
  ],
  "instructions": [
    "~/.config/opencode/instructions/shell-strategy.md"
  ],
  "permission": {
    "bash": {
      "rm *": "deny",
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "git push *": "deny",
      "git reset *": "deny",
      "git rebase *": "deny",
      "git checkout *": "deny"
    }
  },
  "agent": {
    "build": {
      "temperature": 0.3
    },
    "plan": {
      "model": "anthropic/claude-opus-4-6",
      "reasoningEffort": "high"
    },
    "explore": {
      "model": "github-copilot/grok-code-fast-1",
      "temperature": 0
    },
    "general": {
      "model": "anthropic/claude-sonnet-4-6",
      "steps": 15,
      "temperature": 0.3
    },
    "title": {
      "model": "github-copilot/grok-code-fast-1",
      "temperature": 0
    },
    "summary": {
      "model": "anthropic/claude-haiku-4-5",
      "temperature": 0.1
    },
    "compaction": {
      "model": "anthropic/claude-sonnet-4-6",
      "temperature": 0
    },
    "test": {
      "model": "anthropic/claude-sonnet-4-6"
    },
    "review": {
      "model": "anthropic/claude-sonnet-4-6"
    },
    "docs": {
      "model": "anthropic/claude-opus-4-6"
    },
    "quick": {
      "model": "anthropic/claude-haiku-4-5"
    },
    "benchmark": {
      "model": "anthropic/claude-haiku-4-5"
    },
    "spec": {
      "model": "anthropic/claude-opus-4-6"
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "podman",
        "run",
        "-i",
        "--rm",
        "--replace",
        "--name",
        "mcp-context7",
        "-e",
        "MCP_TRANSPORT=stdio",
        "mcp/context7"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "podman",
        "run",
        "-i",
        "--rm",
        "--replace",
        "--name",
        "mcp-sequential-thinking",
        "mcp/sequentialthinking"
      ]
    },
    "github": {
      "type": "local",
      "command": [
        "gh",
        "mcp"
      ]
    },
    "exa": {
      "type": "local",
      "command": [
        "podman",
        "run",
        "-i",
        "--rm",
        "--replace",
        "--name",
        "mcp-exa",
        "-e",
        "EXA_API_KEY={env:EXA_API_KEY}",
        "mcp/exa"
      ]
    }
  }
}
