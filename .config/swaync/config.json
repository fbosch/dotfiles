{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "bottom",
  "cssPriority": "user",
  "control-center-width": 380,
  "control-center-height": 640,
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 8,
  "control-center-margin-right": 8,
  "control-center-margin-left": 0,
  "notification-window-width": 280,
  "notification-icon-size": 24,
  "notification-body-image-height": 200,
  "notification-body-image-width": 320,
  "timeout": 5,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 150,
  "hide-on-clear": true,
  "hide-on-action": false,
  "script-fail-notify": true,
  "scripts": {
    "example-script": {
      "exec": "echo 'Do something...'",
      "urgency": "Normal"
    }
  },
  "notification-visibility": {
    "hyprland-reset": {
      "state": "transient",
      "app-name": "^Hyprland$",
      "body": "^Config Reloaded$"
    },
    "keyboard-layout-switch": {
      "state": "transient",
      "app-name": "^Layout Switcher$"
    },
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },
  "widgets": ["title", "notifications", "dnd", "volume", "buttons-grid"],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": " 󰎟 "
    },
    "dnd": {
      "text": "Do not disturb"
    },
    "label": {
      "max-lines": 1,
      "text": " "
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12
    },
    "volume": {
      "label": "",
      "show-per-app": true
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󱤅",
          "command": "bash ~/.config/hypr/scripts/toggle-performance-mode.sh",
          "tooltip": "Toggle Performance Mode"
        },
        {
          "label": "󰖔",
          "command": "bash ~/.config/hypr/scripts/toggle-night-light.sh",
          "tooltip": "Toggle Night Light"
        },
        {
          "label": "󰅶",
          "command": "bash ~/.config/hypr/scripts/toggle-hypridle.sh",
          "tooltip": "Toggle Caffeine Mode"
        },
        {
          "label": "󰑓",
          "command": "bash ~/.config/hypr/scripts/reset-desktop.sh",
          "tooltip": "Reset Desktop"
        }
      ]
    }
  }
}
