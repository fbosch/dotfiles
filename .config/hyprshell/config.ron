plugin {
  hyprshell {
    # Zenwritten Dark theme styling
    # Colors matching hyprland.conf general section
    # Background: #191919 (matches Zenwritten Dark)
    # Foreground: #bbbbbb (matches Zenwritten Dark)
    # Active border: rgba(ffffff66) - white with 40% opacity
    # Inactive border: rgba(59595940) - gray with 25% opacity
    
    # Note: Actual configuration options may vary based on hyprshell version
    # If these options don't work, check hyprshell documentation for correct option names
    # Common alternatives: bg_color, fg_color, border_col, etc.
    
    # Visual styling (if supported)
    background_color = rgba(191919ee)
    foreground_color = rgba(bbbbbbff)
    border_color = rgba(ffffff66)
    inactive_border_color = rgba(59595940)
    
    # Decoration (matching hyprland.conf decoration section)
    border_size = 1
    rounding = 4
    blur_enabled = true
    blur_size = 2
    blur_passes = 4
    
    # Opacity (matching hyprland.conf)
    opacity = 1.0
    inactive_opacity = 1.0
    
    # Text styling
    text_color = rgba(bbbbbbff)
    text_size = 10
    
    # Spacing (matching hyprland.conf gaps)
    padding = 10
    gap_size = 5
  }
}
